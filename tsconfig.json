{
  "compilerOptions": {
    "module": "es2020",
    "outDir": "./lib",
    "rootDir": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./lib",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "target": "ES6",
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveSymlinks": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/index.tsx",
    "src/custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
